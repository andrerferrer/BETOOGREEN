<!DOCTYPE html>
<html>
  <head>
    <title>BETOOGREEN</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/e851e5b568.js" crossorigin="anonymous"></script>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="page-container">
      <div class="navbar-container"> <%= render 'shared/navbar' %></div>
    <%= render 'shared/flashes' %>
      <div class="content-container"><%= yield %></div>

      <div class="footer-container"><%= render 'shared/footer' %></div>
    </div>
  </body>
</html>
