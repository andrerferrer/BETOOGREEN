<h1> <strong>DASHBOARD</strong>  </h1>

<h2><%= link_to "Create a new product", new_product_path  %></h2>
<h2><%= link_to "See all listings", listings_path  %></h2>

<h2> These are your products: </h2>
<% @products.each do |product| %>
<p>- <%= product.name %> - <%= link_to "See details", product_path(product.id) %> </p>
<% end %>

produc

<h2> These are your current listings: </h2>
<% @listings.each do |listing| %>
<p>- <%= listing.product.name %> , you sold <%= listing.quantity_sold %> units - <%= link_to "See details", listing_path(listing.id) %> </p>
<% end %>

<h2> This is what you sold: </h2>
<% @purchases.each do |purchase| %>
<p>  <strong><%= purchase.created_at.strftime("%d/%m/%Y")%> / <%= purchase.created_at.strftime("%k:%M") %></strong>   -> <%= purchase.quantity %> <strong> units </strong>of <%= purchase.listing.product.name %> </p>
<% end %>
