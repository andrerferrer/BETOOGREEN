<div class="banner">
  <%= image_tag 'background-yellow-square.png', class: "banner-bg"  %>
  <h1 class="banner-title text-center">Buy <span class="text-gradient">sustainable</span> products <br> at low prices</h1>
  <div class="images-container d-flex container">
    <div class="left-container pr-4">
      <p>We want to promote a sustainable economy and create the largest sustainable shopping community</p>
      <%= image_tag 'collective-buy.png' %>
      <a href="#" class="btn-gradient mt-3 btn-block text-center">Learn more</a>
    </div>
    <div class="right-container">
      <div class="top-images pb-4 d-flex">
        <%= image_tag 'plastic-free-cotton.jpeg' %>
        <div class="top-images-right-content pl-4">
          <p>Product certify by international fair <br> trade standars (FLO)</p>
          <div class="d-flex top-images-right">
            <%= image_tag 'eco-house.png', class: "h-100 " %>
            <%= image_tag 'eco-products.jpeg', class: "h-100 " %>
           </div>
         </div>
      </div>
      <div class="bottom-images d-flex">
        <%= image_tag 'eco-soup.jpeg', class: "eco-soup" %>
        <%= image_tag 'eco-world.png', class: "green-world " %>
        <%= image_tag 'toothbrush.png', class: "toothbrush " %>
      </div>
    </div>
  </div>
</div>


